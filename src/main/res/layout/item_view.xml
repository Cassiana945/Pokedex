<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/contorno"/>
            <ImageView
                android:id="@+id/pokemon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleX=".90"
                android:scaleY=".90"
                android:src="@drawable/pikachu"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="left">
            <TextView
                android:id="@+id/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Aqui"
                android:textSize="20sp"
                android:fontFamily="@font/pixelify_sans_bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/pixelify_sans"
                android:text="Tipo Aqui"
                android:textColor="@color/white"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/descoberto"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/adicionar"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
</RelativeLayout>